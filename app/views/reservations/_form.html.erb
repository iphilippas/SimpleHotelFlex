<%= simple_form_for @reservation, :html => { :class => 'form-horizontal' } do |f| %>
  
  <%= f.association :room %>
  <%= f.input :fromdate, as: :string %>
  <%= f.input :todate, as: :string %>
  <div class="control-group string optional reservation_todate">
	<label class="string optional control-label" for="reservation_customer_id">Πελάτης</label>
	<div class="controls">
  		<div class="input-append">
  			<input id="reservation_customer_id" class="string optional" type="hidden" name="reservation[customer_id]">
			<input id="reservation_customer_name" class="string optional" type="text" size="50" name="reservation[customer_name]">
  			<button id="find_cust" class="btn" type="button" >Εύρεση!</button>
  		</div>
	</div>
  </div>
	
  <%= f.input :deposit, input_html: { class:"input-mini" } %>
  <%= f.input :description %>
  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                reservations_path, :class => 'btn' %>
  </div>
<% end %>

<!-- Modal -->
<div id="customer_modal" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                <h3 id="myModalLabel">Πελάτες</h3>
        </div>
                <div class="modal-body">
                </div>

</div>
