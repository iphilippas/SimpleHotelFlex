<%- model_class = Customer -%>
<%= form_for @customer, html: {id: "new_customer_modal"}, remote: true do |f|%>
<table class="table table-striped" id="customer_modal_table">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:email) %></th>
      <th><%= model_class.human_attribute_name(:phone) %></th>
      <th><%= model_class.human_attribute_name(:address) %></th>
     
      
    </tr>
  </thead>
  <tbody>
    <% @customers.each do |customer| %>
      <tr>
        <td class="cid" id="ci_<%= customer.id %>"><%= customer.id %></td>
        <td class="cname" id="cn_<%= customer.id %>"><%= customer.name %></td>
        <td><%= customer.email %></td>
        <td><%= customer.phone %></td>
        <td><%= customer.address %></td>
       
       
      </tr>
    <% end %>
		
  </tbody>
  <tfoot>
	<tr id="add_customer">
			<td><%= f.submit "+", class:"btn btn-primary" %></td>
	      <td><%= f.text_field :name %></td>
	      <td><%= f.text_field :email %></td>
	      <td><%= f.text_field :phone %></td>
	      <td><%= f.text_field :address %></td>
		
	</tr>
	</tfoot>
</table>
<% end %>
<script>
$('#customer_modal_table tbody tr').click(function() {
  $('#customer_modal').modal("hide");
  name = $(this).find('td.cname').text()
  id = $(this).find('td.cid').text()
 
  $('#reservation_customer_name').val(name);
  $('#reservation_customer_id').val(id); 
});
</script>

