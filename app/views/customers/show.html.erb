<%- model_class = Customer -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<table class="dl-horizontal">
	<tr>
		<td><strong><%= model_class.human_attribute_name(:name) %>:</strong></td>
		<td><%= @customer.name %></td>
	</tr>
	<tr>
		<td><strong><%= model_class.human_attribute_name(:email) %>:</strong></td>
		<td><%= @customer.email %></td>
	</tr>
	<tr>
		<td><strong><%= model_class.human_attribute_name(:description) %>:</strong></td>
		<td><%= @customer.description %></td>
	</tr>
  	<tr>
		<td><strong><%= model_class.human_attribute_name(:vip) %>:</strong></td>
		<td><%= @customer.vip %></td>
	</tr>
   <tr>
		<td><strong><%= model_class.human_attribute_name(:phone) %>:</strong></td>
		<td><%= @customer.phone %></td>
	</tr>
   <tr>
		<td><strong><%= model_class.human_attribute_name(:address) %>:</strong></td>
		<td><%= @customer.address %></td>
	</tr>
</table>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              customers_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_customer_path(@customer), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              customer_path(@customer),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
