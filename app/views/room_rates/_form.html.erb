<%= simple_form_for @room_rate, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :duration %>
  <%= f.input :days %>
  <%= f.input :rate %>
  <%= f.association :room_type %>
  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                room_rates_path, :class => 'btn' %>
  </div>
<% end %>
